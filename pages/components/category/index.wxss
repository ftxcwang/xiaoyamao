.container{
    max-width: 750rpx;
    min-height: 100%;
    margin: 0 auto;
    background-color:#FBF9FE;
}

.category{
    font-size: 24rpx;
}

.category::after{
    clear: both;
}

.list{
    min-width: 150rpx;
    width: 150rpx;
    float: left;
    overflow: hidden;
    background-color: #FFF;
}

.li{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
    border-right: 1px solid #e5e5e5;
}

.li:hover{
    color:#ff0000;
}

.detail{
    margin: 0 auto;
    width: 550rpx;
    min-width: 550rpx;
    min-height: 100%;
    margin-left: 170rpx;
    overflow: hidden;
}

image{
    width: 100%;
    height: auto;
}

.detail_item{
    margin: 15rpx;
    min-width: 550rpx;
    height: 100%;
    overflow: hidden;
    position: relative;
}

.detail_title{
    line-height: 70rpx;
}


.detail_list::before {
    content: '';
    height: 1px;
    width: 100%;
    background-color: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1;
}

.item{
    width: 178rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #fff;
    float: left;
    position: relative;
}

.item::before {
    content: '';
    height: 1px;
    width: 200%;
    position: absolute;
    left: 0;
    top: auto;
    right: auto;
    bottom: 0;
    background-color: #e5e5e5;
    border: 0 solid transparent;
    border-radius: 0;
    transform: scale(0.5);
    transform-origin: top left;
}


.item::after {
    content: '';
    height: 200%;
    width: 1px;
    position: absolute;
    left: auto;
    top: 0;
    right: 0;
    bottom: auto;
    background-color: #e5e5e5;
    border: 0 solid transparent;
    border-radius: 0;
    transform: scale(0.5);
    transform-origin: top left;
}

.clear-border::after{
    content: '';
	height: 1px;
	width: 200%;
	position: absolute;
	left: 0;
	top: auto;
	right: auto;
	bottom: 0;
	background-color: transparent;
	border: 0 solid transparent;
	border-radius: 0;
	transform: scale(.5);
	transform-origin: top left; 
}

.products{
    margin: 38rpx 0 0 14rpx;
}

.products_title{
    line-height: 70rpx;
}

.products_list{
    border: 0;
    font-size: 0;
    padding: 14rpx 20rpx 0 20rpx;
    overflow: hidden;
    background-color: #FFF;
}

.p_item{
    width: 33.3%;
    float: left;
    text-align: center;
}

.p_img{
    width: 110rpx;
    height: 110rpx;
    border: 0;
}

.p_name{
    font-size: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #686868;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
}

.ad{
    margin: 14rpx 0 0 14rpx;
}

.ad_img{
    width: 100%;
    height: 170rpx;
}






